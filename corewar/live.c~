#include <stdlib.h>
#include "corewar.h"
#include "my.h"
#include "op.h"

int	init_live(t_game *g)
{
  if ((g->live = malloc(sizeof(int) * (4 + 1))) == NULL)
    return (1);
  g->live[4] = -1;
  my_memset(g->live, 0, 4);
  return (0);
}

void	update_live(t_game *g)
{
  int	i;
  int	sum;

  i = -1;
  sum = 0;
  while (++i < 4)
    sum += g->live[i];
  if (sum >= NBR_LIVE)
    g->cycle_to_die -= CYCLE_DELTA;
}

